<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/card_setting_time_item_size"
    android:layout_height="@dimen/card_setting_time_item_size"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="@dimen/card_elevation_default"
    app:cardCornerRadius="@dimen/card_corner_radius_default"
    app:cardBackgroundColor="@color/selector_setting_time_background_item">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_setting_time_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceHeadline2"
        android:includeFontPadding="false"
        tools:text="4"
        android:gravity="center"
        android:textColor="@color/selector_setting_time_text_item"
        android:textStyle="bold"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_setting_time_currency_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceCaption"
        android:layout_marginTop="4dp"
        android:includeFontPadding="false"
        android:text="@string/hours"
        android:gravity="center"
        android:textColor="@color/selector_setting_time_text_item"
        android:layout_gravity=""/>

    </LinearLayout>

</androidx.cardview.widget.CardView>